<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_5sdp">

    <!--ViewContainer-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/_7sdp">

        <!--U-img-->
        <View
            android:id="@+id/ivUPic"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/shape_border_shadow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:roundPercent="30" />

        <!--U-name-->
        <View
            android:id="@+id/tvUName"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_17sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:background="@drawable/shape_placeholder_items"
            app:layout_constraintStart_toEndOf="@id/ivUPic"
            app:layout_constraintTop_toTopOf="@id/ivUPic" />

        <!--U-Date-->
        <View
            android:id="@+id/tvDate"
            android:layout_width="@dimen/_39sdp"
            android:layout_height="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@drawable/shape_placeholder_items"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvUName" />

        <!--RecentMessage-->
        <View
            android:id="@+id/tvRecentMessage"
            android:layout_width="0dp"
            android:layout_height="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/shape_placeholder_items"
            app:layout_constraintBottom_toBottomOf="@id/ivUPic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivUPic"
            app:layout_constraintTop_toBottomOf="@id/tvUName" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>